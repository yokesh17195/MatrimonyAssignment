<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sample.matrimony.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_gestureFragment"
            app:destination="@id/gestureFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.sample.matrimony.ui.detail.DetailFragment"
        android:label="DetailFragment" />
    <fragment
        android:id="@+id/gestureFragment"
        android:name="com.sample.matrimony.ui.gesture.GestureFragment"
        android:label="GestureFragment" />
</navigation>